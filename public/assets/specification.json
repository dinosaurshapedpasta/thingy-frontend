{
  "openapi": "3.0.4",
  "info": {
    "title": "thingy",
    "description": "thingy api",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Local server??"
    },
    {
      "url": "https://api-ichack.unigeorge.uk",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Api-Key"
      }
    },
    "schemas": {
      "StandardResponse": {
        "type": "object",
        "required": [
          "code"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "description": "The HTTP status code."
          },
          "message": {
            "type": "string",
            "description": "A short message explaining the result."
          }
        },
        "example": {
          "code": 404,
          "message": "The requested resource could not be found."
        }
      },
      "UUID": {
        "description": "A unique identifier.",
        "type": "string",
        "example": "428ea120-2c3a-44ba-9b32-9d501d5f9786"
      },
      "UserType": {
        "description": "A user's type.\n0: Volunteer\n1: Manager",
        "type": "integer",
        "enum": [
          0,
          1
        ]
      },
      "Location": {
        "description": "A location of a point on a map.",
        "type": "string",
        "example": "51째29'57.0\"N 0째10'39.3\"W"
      },
      "User": {
        "description": "API representation of a user",
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "name": {
            "type": "string",
            "example": "username",
            "minLength": 2,
            "maxLength": 32
          },
          "karma": {
            "type": "integer",
            "example": 42,
            "description": "Karma based on a user's recent actions"
          },
          "maxVolume": {
            "type": "number",
            "example": 3.5,
            "description": "The maximum volume of a user's car in m^3"
          },
          "userType": {
            "$ref": "#/components/schemas/UserType"
          }
        }
      },
      "Item": {
        "description": "API representation of an item.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "name": {
            "type": "string",
            "example": "item name",
            "maxLength": 48
          },
          "volume": {
            "description": "The item's volume in m^3",
            "type": "number",
            "example": 0.2
          }
        }
      },
      "PickupPoint": {
        "description": "API representation of a pickup point.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "name": {
            "type": "string",
            "example": "pickup point name",
            "maxLength": 48
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          }
        }
      },
      "StoragePoint": {
        "description": "API representation of a storage point.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "name": {
            "type": "string",
            "example": "storage point name",
            "maxLength": 48
          },
          "maxVolume": {
            "type": "number",
            "example": 3.5,
            "description": "The maximum volume of the storage point's space in m^3"
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          }
        }
      },
      "DropOffPoint": {
        "description": "API representation of a drop off point.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "name": {
            "type": "string",
            "example": "drop off point name",
            "maxLength": 48
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          }
        }
      },
      "PickupRequest": {
        "description": "API representation of a pickup request.",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/UUID"
          },
          "pickupPointID": {
            "description": "The ID of the associated pickup point.",
            "$ref": "#/components/schemas/UUID"
          }
        }
      }
    },
    "responses": {
      "ActionSuccessful": {
        "description": "The action was carried out successfully.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/StandardResponse"
            },
            "example": {
              "code": 200,
              "message": "Action carried out successfully."
            }
          }
        }
      },
      "MalformedRequest": {
        "description": "The server couldn't understand the user's request/the user's request was invalid.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/StandardResponse"
            },
            "example": {
              "code": 400,
              "message": "Invalid parameters/request body."
            }
          }
        }
      },
      "UserNotAuthenticated": {
        "description": "The user is not logged in/using a valid API key.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/StandardResponse"
            },
            "example": {
              "code": 401,
              "message": "You are not logged in/using a valid API key."
            }
          }
        }
      },
      "UserNotAuthorised": {
        "description": "The user is not authorised to carry out the intended action.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/StandardResponse"
            },
            "example": {
              "code": 403,
              "message": "You are not authorised to carry out this action."
            }
          }
        }
      },
      "ResourceNotFound": {
        "description": "The requested resource could not be found.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/StandardResponse"
            },
            "example": {
              "code": 404,
              "message": "The requested resource could not be found."
            }
          }
        }
      }
    }
  },
